      "publisher" : "Openlogic",
      "offer" : "CentOS",
      "sku" : "7.2",
      "version" : "latest"
    },
    "rhel" : {
      "publisher" : "RedHat",
      "offer" : "RHEL",
      "sku" : "7.2",
      "version" : "latest"
